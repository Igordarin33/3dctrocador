  SET_PIN PIN=ABAIXAR_TEMP_PAUSE VALUE=1
  M118 "Preparando..."
  M82     
  M106 S0     
  M106 P1 S0   
  M106 P2 S0   
  G90         
  TURBORESET 
  G4 P1000


